@model Aula2407.Models.Produtos
@{
    ViewData["Title"] = "CadrastroProdutos";
}
<div class="container">
    @* LINHA TITULO *@
    <div class="row">
        <div class="col text-center">
            <h1>Cadrastro Produto</h1>
        </div>
    </div>
    @* nome-Preço-quatidade-valorUni *@
    <form method="post">
        <div class="row">
            <div class="col">
                <label asp-for="Nome" class="col-sm-2 col-form-label fw-bold">
                    Nome
                </label>
                <input asp-for="Nome" type="text" class="form-control" id="Nome" />
            </div>
            <div class="col-lg-3">
                <label asp-for="Preco" class="col-form-label fw-bold">
                    Preço
                </label>
                <input asp-for="Preco" type="text" class="form-control" id="Preco" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <label asp-for="validade_Pro" class="col-form-label fw-bold"> </label>
                <input asp-for="validade_Pro" type="text" class="form-control" id="validade_Pro" />
            </div>

            <div class="col-lg-3">
                <label asp-for="quatidade" class="col-form-label fw-bold"></label>
                <input asp-for="quatidade" type="text" class="form-control" id="quantidade" />
            </div>
            <div class="col-lg-3">
                <label asp-for="valorUnitario" class="col-form-label fw-bold"></label>
                <input asp-for="valorUnitario" type="text" class="form-control" id="valorUnitario" />
            </div>
            <div class="col-lg-3">
                <label asp-for="valorTotal" class="col-form-label fw-bold text-nowrap"> </label>
                <input asp-for="valorTotal" type="text" class="form-control" id="valorTotal" />
            </div>
        </div>
        @*butoon *@<div class="row mt-3 justify-content-md-end">
            <div class="col-3 d-flex justify-content-end">
                <input type="submit" class="btn btn-outline-info btn-lg" name="name" value="Cadastrar" />
            </div>
        </div>
    </form>
</div>



