@model IEnumerable<Aula2407.Models.Produtos>

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_NossoLayout.cshtml";
}
<h1 class="display-4 align-content-center">Produtos</h1>
<p>
 
    <a class=" btn btn btn-primary " asp-action="CadrastroProdutos">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.validade_Pro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quatidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valorUnitario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valorTotal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.validade_Pro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quatidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valorUnitario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valorTotal)
            </td>
            <td>
                    <a class=" btn btn btn-primary asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class=" btn btn btn-primary asp-action="DetalhesProdutos" asp-route-id="@item.Id">Details</a> |
                    <a class=" btn btn btn-primary asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
